    <text>学习经历</text>
  </view>


  <view style="display:flex; flex-direction: column;">
    <h1>选择时间</h1>

    <view class="section">
      <view class="section__title">选择时间</view>
      <picker mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}">
        <view class="picker">
          当前选择：{{multiArray[0][multiIndex[0]]}},{{multiArray[1][multiIndex[1]]}}
        </view>
      </picker>
    </view>
  </view>

  <!-- 地点选择器 - 视觉显化 << -->
  <view style="display:flex; flex-direction: column;">
    <view>选择地点</view>
    <picker mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChangeLocation" value="{{multiIndexLocation}}" range="{{multiArrayLocation}}">
        <view class="picker">
          当前选择：{{multiArrayLocation[0][multiIndexLocation[0]]}}，{{multiArrayLocation[1][multiIndexLocation[1]]}}
        </view>
      </picker>
  </view>
  <!-- 地点选择器 - 视觉显化 << -->
